{
  "name": "isp-wallet-backend",
  "version": "1.0.0",
  "description": "Central Wallet Based ISP and Utility Platform Backend",
  "main": "dist/index.js",
  "scripts": {
    "postinstall": "npm run prisma:generate",
    "dev": "nodemon",
    "build": "tsc",
    "start": "node dist/index.js",
    "prisma:generate:wallet": "prisma generate --schema=prisma/account-wallet/schema.prisma",
    "prisma:generate:service": "prisma generate --schema=prisma/service/schema.prisma",
    "prisma:generate": "npm run prisma:generate:wallet && npm run prisma:generate:service",
    "prisma:migrate:wallet": "prisma migrate dev --schema=prisma/account-wallet/schema.prisma",
    "prisma:migrate:service": "prisma migrate dev --schema=prisma/service/schema.prisma",
    "prisma:migrate": "npm run prisma:migrate:wallet && npm run prisma:migrate:service",
    "prisma:deploy:wallet": "prisma migrate deploy --schema=prisma/account-wallet/schema.prisma",
    "prisma:deploy:service": "prisma migrate deploy --schema=prisma/service/schema.prisma",
    "prisma:deploy": "npm run prisma:deploy:wallet && npm run prisma:deploy:service",
    "seed": "ts-node src/seed.ts",
    "create-sample-excel": "ts-node scripts/create-sample-excel.ts",
    "lint": "tsc --noEmit"
  },
  "dependencies": {
    "@prisma/client": "^5.10.0",
    "axios": "^1.13.5",
    "bcrypt": "^5.1.1",
    "compression": "^1.7.4",
    "cors": "^2.8.5",
    "dotenv": "^17.2.4",
    "exceljs": "^4.4.0",
    "express": "^4.18.2",
    "express-rate-limit": "^7.1.5",
    "helmet": "^7.1.0",
    "ioredis": "^5.3.2",
    "jsonwebtoken": "^9.0.2",
    "uuid": "^9.0.0",
    "winston": "^3.11.0",
    "xlsx": "^0.18.5",
    "zod": "^3.22.4"
  },
  "devDependencies": {
    "@types/bcrypt": "^5.0.2",
    "@types/compression": "^1.7.5",
    "@types/cors": "^2.8.17",
    "@types/express": "^4.17.21",
    "@types/jsonwebtoken": "^9.0.5",
    "@types/node": "^20.11.5",
    "@types/uuid": "^9.0.7",
    "nodemon": "^3.0.3",
    "prisma": "^5.10.0",
    "ts-node": "^10.9.2",
    "tsconfig-paths": "^4.2.0",
    "typescript": "^5.3.3"
  }
}
